<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="152dp"
    android:layout_height="145dp"
    app:cardBackgroundColor="#5B5B5B"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#5B5B5B"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetColor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/baseline_color_lens_24"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="12dp"
            android:paddingTop="8dp"
            android:text="Сбросить цвет"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B8B8B" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12sp"
            android:layout_marginTop="8dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Поменять цвет"
            android:textColor="@color/white"
            android:textSize="12sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/setYellow"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:foreground="@drawable/bg_color_selected"
                app:cardBackgroundColor="@color/note_yellow"
                app:cardCornerRadius="2dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/setPurple"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:foreground="@drawable/bg_color_selected"
                app:cardBackgroundColor="@color/note_purple"
                app:cardCornerRadius="2dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/setPink"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:foreground="@drawable/bg_color_selected"

                app:cardBackgroundColor="@color/note_pink"
                app:cardCornerRadius="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/setRed"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:foreground="@drawable/bg_color_selected"
                app:cardBackgroundColor="@color/note_red"
                app:cardCornerRadius="2dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/setGreen"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:foreground="@drawable/bg_color_selected"
                app:cardBackgroundColor="@color/note_green"
                app:cardCornerRadius="2dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/setBlue"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:foreground="@drawable/bg_color_selected"
                app:cardBackgroundColor="@color/note_blue"
                app:cardCornerRadius="2dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>